<!DOCTYPE html>
<html lang="en">
	<head>
	  	<%- include('../partials/head') %>
	  	<link rel="stylesheet" href="<%= site.basePath %>/assets/css/styles.css">
		<% if (page.isHome !== true) { %>
			<link rel="stylesheet" href="<%= site.basePath %>/assets/css/prism.css">
		<% } %>
	</head>
	<body class="post">
		<section class="page<% if (page.isHome === true) { %> home<% } %>">
			<% const title = 'Databases!'; %>
			<% if (page.isHome !== true) { %>
				<nav><a href="<%= site.basePath %>" class="button large button--home">Home</a></nav>
			<% } %>
		  <h1 class="page__title"><% if (page.title) { %><%- page.title %><% } else { %><%- title %><% } %></h1>
		  <% if (page.isHome === true) { %>
		  	<img class="page__hero-img float-center" src="<%= site.basePath %>/assets/images/connecting.jpg" alt="Connecting to the internet.">
		  <% } %>
		</section>
		<%- body %>
		<% if (page.isHome !== true) { %>
			<script src="<%= site.basePath %>/assets/javascript/prism.js"></script>
		<% } %>
	</body>
</html>
