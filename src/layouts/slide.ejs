<!DOCTYPE html>
<html lang="en-US">
<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="<%= site.basePath %>/assets/css/reveal.css">
  <style>
  	.slides > :not(section) {
  		display: none;
  	}
  	.reveal li > ol {
		  list-style-type: lower-alpha; 
  	}
    .post-only {
      display: none;
    }
    .reveal blockquote {
      font-size: 1.5rem;
      line-height: 1.5;
      text-align: left;
    }
  </style>
</head>
<body>
  
	<div class="reveal">
		<div class="slides">
	      	<section>
	      		<h1><%= page.title %></h1>
	      	</section>
			<%- body %>	
		</div>
	</div>

  <script src="https://cdn.jsdelivr.net/reveal.js/3.0.0/lib/js/head.min.js"></script>
  <script src="https://cdn.jsdelivr.net/reveal.js/3.0.0/js/reveal.min.js"></script>
  <script>
      Reveal.initialize({
          dependencies: [
                { src: '<%= site.basePath %>/assets/javascript/plugin/reveal-a11y.js', async: true, condition: function() { 
                  return !!document.body.classList; 
                } 
            }]
      });
    </script>
</body>
</html>
