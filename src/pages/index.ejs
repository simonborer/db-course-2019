---
isHome: true
---
<div class="grid-container">
  <div class="grid-x">
    <div class="cell small-10 small-offset-1">
      <table class="stack weeks-table">
        <% site.weeks.forEach((week, index) => { %>
          <tr>
            <th colspan="2">
              <% if (week.mod) { %>
              <h2>Module <%- week.mod %></h2>
              <% } else { %>
              <h2><%- week.title %></h2>
              <% } %>
              <p><%- week.description %></p>
              <% if (week.reading) { %>
              <div class="callout primary">
                Read before class: <%= week.reading %>              
              </div>
              <% } %>
            </th>
          </tr>
          <tr>
            <td>
              <div class="button-group">
                <% if (!week.noSlides) { %>
                <a class="button<% if (week.showSlides === true) { %><% } else { %> disabled<% } %>" href="./notes/week-<%- index %>"<% if (week.showSlides === true) { %><% } else { %> aria-disabled<% } %>>Notes <span class="show-for-sr">for week <%- index %></span></a>
                <a class="button<% if (week.showSlides === true) { %><% } else { %> disabled<% } %>" href="./slides/notes/week-<%- index %>"<% if (week.showSlides === true) { %><% } else { %> aria-disabled<% } %>>Slides <span class="show-for-sr">for week <%- index %></span></a>
                <% } %>
                <% if (week.extraContent) {
                  week.extraContent.forEach(content => { %>
                    <a href="<%- content.href %>" class="button<% if (week.showSlides === true) { %><% } else { %> disabled<% } %>" target="_blank"<% if (week.showSlides === true) { %><% } else { %> aria-disabled<% } %>><%- content.text %><span class="show-for-sr">Opens in a new tab</span></a>
                  <% })
                } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
  </div>
</div>

